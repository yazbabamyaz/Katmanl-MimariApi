
@model List<ProductWithCategoryDto>
@{
    ViewData["Title"] = "Index";
}
<a class="btn btn-primary" asp-controller="Product" asp-action="Save">Ekle</a>
<table class="table table-striped">

   <thead>
       <tr>
       <td>Id</td>
       <td>Name</td>
       <td>Price</td>
       <td>Stock</td>
            <td>Category</td>
       <td>CreateDate</td>
       <td>Actions</td>
        </tr>
   </thead>
   <tbody>
       
       @foreach (var item in Model)
        {
             <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Category.Name</td>
                <td>@item.CreatedDate</td>
                <td><a class="btn btn-warning" asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                    <a class="btn btn-danger" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>

            </tr>
        }
      
   </tbody>
</table>

